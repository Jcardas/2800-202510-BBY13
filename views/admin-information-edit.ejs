<%- include("partials/header") %>
    <!-- Navbar -->
    <%- include("partials/navbar") %>

        <link rel="stylesheet" href="/css/information.css">

        <!-- Body -->
        <main class="container mx-auto mt-8 flex-grow px-4">
            <h1 class="text-3xl font-bold mb-6">Edit Page: <%- page.title %></h1>

            <!-- Message Display Area -->
            <% if (message && message.text && message.type) { %>
                <div id="toast-message" class="flex items-center p-4 mb-4 rounded-lg shadow 
      text-sm font-medium 
      <%= message.type === 'success' 
        ? 'bg-green-100 text-green-800 border border-green-300' 
        : 'bg-red-100 text-red-800 border border-red-300' %>">

                    <span class="flex-grow">
                        <%= message.text %>
                    </span>

                    <button onclick="document.getElementById('toast-message').remove()"
                        class="ms-3 text-lg leading-none">Ã—</button>
                </div>

                <script>
                    setTimeout(() => {
                        const toast = document.getElementById('toast-message');
                        if (toast) toast.remove();
                    }, 4000); // Auto-dismiss after 4 seconds
                </script>
                <% } %>


                    <div class="bg-white rounded-lg shadow-md p-6 mb-8">
                        <h2 class="text-xl font-semibold mb-4">Update Page Details</h2>

                        <form id="pageForm" action="/admin/information/update/<%= page.slug %>" method="POST"
                            enctype="multipart/form-data">
                            <div class="grid gap-6 mb-6 md:grid-cols-2">
                                <div>
                                    <label for="title"
                                        class="block mb-2 text-sm font-medium text-gray-900 required-field">Title</label>
                                    <input type="text" id="title" name="title" required value="<%= page.title %>"
                                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                                </div>
                                <div>
                                    <label for="slug"
                                        class="block mb-2 text-sm font-medium text-gray-900 required-field">URL
                                        Slug</label>
                                    <input type="text" id="slug" name="slug" value="<%= page.slug %>" readonly
                                        class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5">
                                    <p class="mt-1 text-sm text-gray-500">Slug is locked and cannot be changed.</p>
                                </div>
                            </div>

                            <div class="mb-6">
                                <label for="description"
                                    class="block mb-2 text-sm font-medium text-gray-900 required-field">Short
                                    Description</label>
                                <textarea id="description" name="description" rows="2" required minlength="10"
                                    maxlength="200"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"><%= page.description %></textarea>
                                <div id="descriptionError" class="hidden mt-1 text-sm text-red-600">
                                    Description must be between 10 and 200 characters
                                </div>
                            </div>

                            <div class="mb-6">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Featured Image</label>
                                <div class="flex items-center space-x-4">
                                    <div id="imagePreview"
                                        class="w-32 h-32 bg-gray-100 rounded-lg overflow-hidden <%= page.imageUrl ? '' : 'hidden' %>">
                                        <img id="previewImg" class="w-full h-full object-cover"
                                            src="<%= page.imageUrl || '' %>" alt="Preview">
                                    </div>
                                    <label for="imageUpload" class="cursor-pointer">
                                        <div class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition">
                                            <span class="text-sm font-medium">Choose Image</span>
                                            <input type="file" id="imageUpload" name="image" accept="image/*"
                                                class="hidden">
                                        </div>
                                    </label>
                                </div>
                            </div>

                            <div class="mb-6">
                                <label
                                    class="block mb-2 text-sm font-medium text-gray-900 required-field">Content</label>
                                <div id="editorToolbar"
                                    class="flex flex-wrap items-center gap-2 border border-gray-300 rounded-t-lg bg-gray-100 px-2 py-2">
                                    <button type="button" data-command="bold" class="p-2 rounded hover:bg-gray-200"
                                        title="Bold">
                                        <i class="fas fa-bold"></i>
                                    </button>
                                    <button type="button" data-command="italic" class="p-2 rounded hover:bg-gray-200"
                                        title="Italic">
                                        <i class="fas fa-italic"></i>
                                    </button>
                                    <button type="button" data-command="insertUnorderedList"
                                        class="p-2 rounded hover:bg-gray-200" title="Bullet List">
                                        <i class="fas fa-list-ul"></i>
                                    </button>
                                    <button type="button" data-command="insertOrderedList"
                                        class="p-2 rounded hover:bg-gray-200" title="Numbered List">
                                        <i class="fas fa-list-ol"></i>
                                    </button>
                                    <button type="button" data-command="createLink"
                                        class="p-2 rounded hover:bg-gray-200" title="Insert Link">
                                        <i class="fas fa-link"></i>
                                    </button>
                                    <button type="button" data-command="h2"
                                        class="px-3 py-1 text-xs font-bold rounded hover:bg-gray-200" title="Heading 2">
                                        H2
                                    </button>
                                    <button type="button" data-command="h3"
                                        class="px-3 py-1 text-xs font-bold rounded hover:bg-gray-200" title="Heading 3">
                                        H3
                                    </button>
                                </div>
                                <div id="editor" contenteditable="true"
                                    class="bg-gray-50 border border-t-0 border-gray-300 text-gray-900 text-sm rounded-b-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-3 min-h-[200px]">
                                    <%- page.body %>
                                </div>
                                <textarea id="body" name="body" class="hidden" required><%- page.body %></textarea>
                                <div id="contentError" class="hidden mt-1 text-sm text-red-600">Please add some content
                                </div>
                            </div>

                            <button type="submit" id="submitBtn"
                                class="px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg text-sm transition">
                                Update Page
                            </button>
                        </form>
                    </div>
        </main>

        <script src="/scripts/information.js"></script>

        <!-- Footer -->
        <%- include("partials/footer") %>