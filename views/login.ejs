<%- include("partials/header") %>
    <!-- Navbar -->
    <%- include("partials/navbar") %>
    
    <!-- Accessibility Sliding Bar -->
    <%- include("partials/sliding_bar") %>

    <main class="container mx-auto mt-8 flex-grow">
        <!-- Page Title -->
        <div>
            <h1 class="text-gray-400 text-4xl font-bold text-center mb-8 ml-2">
                Log In
            </h1>
        </div>

        <!-- Text -->
        <div>
            <p class="text-center mb-4">
                Log in to your account or create one if you don't have one.
            </p>
        </div>

        <!-- Log in Form -->
        <div class="flex justify-center">
            <form action="/login" method="POST" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-full max-w-sm">
                <!-- Error Message -->
                 <!-- Written by DeepSeek AI -grace -->
                <% if (errorMessage) { %>
                    <div class="mb-4 bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
                        <p class="font-bold">Error</p>
                        <p><%= errorMessage %></p>
                    </div>
                <% } %>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="email">Email</label>
                    <input type="email" id="email" name="email" autocomplete="email" required
                    value="<%= email || '' %>"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline <%= fieldError === 'email' ? 'border-red-500 ring-1 ring-red-400 bg-red-50' : '' %>"
                     />
                </div>
                <div class="mb-6">
                    <label class="block text-gray-700 text-sm font-bold mb-2" for="password">Password</label>
                    <input type="password" id="password" name="password" autocomplete="current-password" required
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline <%= fieldError === 'password' ? 'border-red-500 ring-1 ring-red-400 bg-red-50' : '' %>" 
                    />
                </div>
                <div class="flex items-center justify-between">
                    <button type="submit"
                        class="bg-gray-400 text-white font-bold py-2 px-4 rounded shadow hover:shadow-lg transition-shadow">
                        Log In
                    </button>
                    <a href="/signup"
                        class="inline-block align-baseline font-bold text-sm text-gray-400 hover:text-blue-500">Create
                        an account</a>
                </div>
            </form>
        </div>

        <!-- <div>
            <p id="error"></p>
        </div> -->
    </main>

<!-- Footer -->
<%- include("partials/footer") %>