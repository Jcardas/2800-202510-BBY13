<header class="text-black py-4 sticky top-0 z-50 bg-white shadow-md">
  <div class="container mx-auto flex justify-between items-center px-4">
    <h1 class="text-xl font-bold">
      <a href="/"> IsThisMyGrandson.com </a>
    </h1>

    <!-- Desktop navigation (hidden on mobile) -->
    <nav class="hidden md:block">
      <ul class="flex items-center space-x-6">
        <li><a href="/" class="hover:text-gray-600 transition-colors duration-200 font-medium">Home</a></li>
        <li><a href="/games" class="hover:text-lime-400 transition-colors duration-200 font-medium">Games</a></li>
        <li><a href="/information" class="hover:text-purple-400 transition-colors duration-200 font-medium">Information</a></li>
        <li><a href="/about" class="hover:text-gray-600 transition-colors duration-200 font-medium">About</a></li>
        <div class="flex items-center space-x-4">
            <% if (user) { %>
            <!-- Logged in state -->
            <a href="/account" class="flex items-center">
              <span class="md:inline mr-2">
              <img src="<%= user.profileImageUrl %>" alt="Account"
                class="w-8 h-8 rounded-full object-cover hover:opacity-60 transition-opacity duration-200">
              </span>
            </a>
            <a href="/logout" class="hidden md:block bg-gray-400
                  text-white 
                  font-bold
                  px-4 py-2 
                  rounded 
                  shadow 
                  hover:shadow-lg 
                  hover:bg-gray-500
                  transition-shadow
                  hidden">Logout</a>
            <% } else { %>
              <!-- Logged out state -->
              <div class="flex items-center space-x-4">
                <a href="/login" class="bg-gray-400
                  text-white 
                  font-bold
                  px-4 py-2 
                  rounded 
                  shadow 
                  hover:shadow-lg 
                  hover:bg-gray-500
                  transition-shadow
                  hidden">Login
                </a>
                <a href="/signup" class="bg-gradient-to-r 
                  from-blue-400 
                  to-blue-300 
                  text-white 
                  font-bold
                  px-4 py-2 
                  rounded 
                  shadow 
                  hover:shadow-lg
                  hover:from-blue-500
                  hover:to-blue-400 
                  transition-shadow">
                  Sign Up
                </a>
              </div>
              <% } %>
      </ul>
    </nav>

    <!-- Mobile menu button and account icon (hidden on desktop) -->
    <div class="flex items-center space-x-4 md:hidden">
      <button id="mobile-menu-button" class="focus:outline-none">
        <img src="/icons/menu_black.svg" alt="Menu"
          class="w-10 h-10 inline-block hover:opacity-60 transition-opacity duration-200" />
      </button>
    </div>
  </div>
</header>

<!-- Mobile menu overlay (hidden by default) -->
<div id="mobile-menu" class="fixed inset-0 z-50 bg-black bg-opacity-50 hidden">
  <!-- Menu container -->
  <div
    class="fixed inset-y-0 right-0 w-64 bg-white shadow-lg transform transition-transform duration-300 ease-in-out translate-x-full">
    <div class="flex justify-end p-4">
      <button id="close-menu-button" class="focus:outline-none">
        <img src="/icons/close_black.svg" alt="Close"
          class="w-6 h-6 inline-block hover:opacity-60 transition-opacity duration-200" />
      </button>
    </div>

    <!-- Menu items -->
    <nav class="p-4">
      <ul class="space-y-4 font-medium">
        <li>
          <a href="/" class="flex items-center py-3 px-4 hover:bg-gray-100 rounded text-lg">
            <span>Home</span>
          </a>
        </li>
        <li>
          <a href="/games" class="flex items-center py-3 px-4 hover:bg-gray-100 rounded text-lg">
            <span>Games</span>
          </a>
        </li>
        <li>
          <a href="/about" class="flex items-center py-3 px-4 hover:bg-gray-100 rounded text-lg">
            <span>About</span>
          </a>
        </li>
        <div class="space-y-4">
          <% if (user) { %>
            <!-- Logged in state -->
            <a href="/account" class="flex items-center py-3 px-4 hover:bg-gray-100 rounded text-lg">
              <span class="md:inline mr-2">Account</span>
              <img src="/icons/account_circle_black.svg" alt="Account"
                class="w-8 h-8 hover:opacity-60 transition-opacity duration-200">
            </a>
            <a href="/logout" class="flex items-center  py-3 px-4 text-white bg-gray-400 hover:bg-gray-500 rounded text-lg">Logout</a>
            <% } else { %>
              <!-- Logged out state - vertical buttons -->
              <div class="flex flex-col space-y-4">
                <a href="/login" class="flex items-center py-3 px-4 text-white bg-gray-400 hover:bg-gray-500 rounded text-lg">
                  Login
                </a>
                <a href="/signup" class="flex items-center py-3 px-4 text-white bg-blue-400 hover:bg-blue-500 rounded text-lg">
                  Sign Up
                </a>
              </div>
              <% } %>
      </ul>
    </nav>
  </div>
</div>