<%- include("partials/header") %>
  <!-- Navbar -->
  <%- include("partials/navbar") %>

    <!-- Accessibility Sliding Bar -->
    <%- include("partials/sliding_bar") %>

    <!-- Round Alert Popup -->
     <%- include("partials/games/real-vs-ai-popup") %>

    <!-- Hint Popup -->
    <%- include("partials/games/hint") %>

      <script src="/scripts/real-vs-ai-game.js"></script>

      <main class="container mx-auto mt-8 flex-grow">
        <!-- Progress bar -->
        <div id="progress-bar" class="w-3/4 bg-grary-200 rounded-full h-8 mb-4 mx-auto relative">
          <!-- Background Bar-->
          <div class="absolute inset-0 bg-gray-200 rounded-full"></div>
          <!-- Lime Progress Bar -->
          <div id="progress-bar-full"
            class="bg-gradient-to-r from-lime-400 to-lime-300 rounded-full h-8 absolute top-0 left-0" style="width: 0%">
          </div>
        </div>

        <div class="w-3/4 mx-auto flex justify-between items-center mb-4">
          <!-- Score -->
          <p id="progress-text" class="text-xl text-gray-600 font-bold">
            Round 1/10
          </p>

          <!-- Timer-->
          <p id="timer" class="text-xl font-bold text-500">10:00</p>
        </div>

        <div class="flex justify-center md:gap-4 sm:gap-2 mb-8">
            <div id="image1-container" class="border-4 border-transparent h-full lg:w-1/3 md:w-1/2 sm:w-1/2 w-1/2 aspect-square">
            <!-- Placeholder for the first image (fetch from cloudinary) -->
            <img id="game-image1" src="img/loading.svg" alt="Image"
              class="game-image w-full h-full object-cover shadow hover:cursor-pointer rounded transition-transform transform hover:scale-105 active:scale-95 hover:shadow-2xl" />
            </div>
            <div id="image2-container" class="border-4 border-transparent h-full lg:w-1/3 md:w-1/2 sm:w-1/2 w-1/2 aspect-square">
            <!-- Placeholder for the second image (fetch from cloudinary) -->
            <img id="game-image2" src="img/loading.svg" alt="Image"
              class="game-image w-full h-full object-cover shadow hover:cursor-pointer rounded transition-transform transform hover:scale-105 active:scale-95 hover:shadow-2xl " />
            </div>
        </div>

        <div class="flex justify-center mb-6">
          <h2 class="text-center text-xl font-bold text-gray-800">
            Select the Real Photo
          </h2>
        </div>

        <div class="flex justify-center mb-4">
          <button id="submit-answer"
            class="bg-gradient-to-r from-lime-400 to-lime-300 text-white font-bold py-2 px-4 rounded shadow hover:shadow-lg transition-shadow active:scale-95">
            Submit Answer
          </button>
          <button id="hint-button"
            class="ml-4 bg-gray-300 text-black font-bold py-2 px-4 rounded shadow hover:shadow-lg transition-shadow">
            <img src="/icons/light_bulb.svg" alt="" />
          </button>
        </div>
      </main>

  <!-- Footer -->
  <%- include("partials/footer") %>